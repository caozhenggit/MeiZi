<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/accent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imv_menu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/icon_menu"/>

            <ImageView
                android:id="@+id/imv_about"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_about"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imv_image"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/icon_image"/>

            <ImageView
                android:id="@+id/imv_video"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_video_normal"/>

            <ImageView
                android:id="@+id/imv_gif"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/icon_gif_normal"/>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
